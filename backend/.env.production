# Supasoka Backend - Production Environment Configuration
# IMPORTANT: Update all values before deploying to Namecheap

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database_name
# 
# For local PostgreSQL on Namecheap VPS:
# DATABASE_URL=postgresql://supasoka_user:your_password@localhost:5432/supasoka_db
#
# For external database (Supabase, Railway, ElephantSQL):
# DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret - MUST be changed to a secure random string
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=supasoka_jwt_secret_key_2024_production_ready_secure

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# =============================================================================
# ADMIN CREDENTIALS
# =============================================================================
# Default admin account - CHANGE THESE IMMEDIATELY
ADMIN_EMAIL=admin@supasoka.com
ADMIN_PASSWORD=admin123

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# UPDATE 'yourdomain.com' with your actual Namecheap domain
ALLOWED_ORIGINS=https://api.yourdomain.com,https://yourdomain.com,capacitor://localhost,ionic://localhost,http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# API URLS (for reference)
# =============================================================================
# These are used by the frontend apps
# UPDATE 'yourdomain.com' with your actual Namecheap domain
REACT_APP_API_URL=https://api.yourdomain.com/api
REACT_APP_SOCKET_URL=https://api.yourdomain.com

# =============================================================================
# NOTIFICATION SCHEDULER
# =============================================================================
# Interval for processing scheduled notifications (milliseconds)
NOTIFICATION_SCHEDULE_INTERVAL_MS=30000
