{
  "name": "supasoka-backend",
  "version": "1.0.0",
  "description": "Backend API for Supasoka TV streaming platform",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/start.js",
    "start:prod": "NODE_ENV=production node scripts/start.js",
    "start:dev": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup-sqlite.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "build": "npm install && npx prisma generate && npx prisma db push --accept-data-loss",
    "postinstall": "npx prisma generate",
    "lint": "echo 'No linting configured'",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "seed": "npx prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "prisma": "^5.7.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "archiver": "^6.0.2",
    "axios": "^1.12.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}